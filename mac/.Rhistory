dyn.load("helloC.so")
helloC <- function(greeting) {
if (!is.character(greeting)) {
stop("Argument 'greeting' must be of type 'character'.")
}
result <- .C("helloC",
greeting=greeting,
count=as.integer(1))
return(result$count)
}
helloC()
